<Page x:Class="OOPLAST9.DeleteFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OOPLAST9"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeleteFrame">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="350"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid HorizontalAlignment="Left" Height="322" VerticalAlignment="Top" Width="800" Name="TableGrid"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="60,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="144" Height="39" Name="DeleteButton" Click="DeleteButton_Click"/>
        <TextBox HorizontalAlignment="Left" Height="39" ToolTip="Введите имя для удаления" Margin="273,5,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Name="DeleteName" Width="184"/>
    </Grid>
</Page>

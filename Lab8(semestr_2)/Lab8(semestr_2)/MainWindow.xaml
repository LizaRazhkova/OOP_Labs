<Window x:Class="Lab8_semestr_2_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8_semestr_2_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="New string" Click="Add_to_database" />
            <MenuItem Header="Delete string" Click="Delete_from_database" />
            <MenuItem Header="Refresh" Click="Refresh" />
        </Menu>
        <DataGrid x:Name="DB_Discipline" Grid.Row="1" AutoGenerateColumns="True" />
        <DataGrid x:Name="DB_Lector" Grid.Row="2" AutoGenerateColumns="True" />
    </Grid>
</Window>
